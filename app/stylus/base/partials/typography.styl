@import '../../utilities/vars'
@import '../../utilities/mixins'

/* HEADERS */

h1
  margin 0
  color: $white
  text-align center
  font-size 2.500em
  text-transform uppercase
  max-width 700px
  margin 0 auto
  +mobile()
    line-height: 1.33
    font-size 1.875em
h2
  font-family Circe, sans-serif
  font-weight 800
  color $red-b
  text-transform uppercase
  font-size 2.250em
  text-align center
  margin 0 0 34px
  +mobile()
    font-size 2.000em

h3
  font-family Circe, sans-serif
  font-size 1.750em
  font-weight 700
  color $white
  margin-bottom 12px

h4 {}
h5 {}
h6 {}

/* PARAGRAPH */
p
  font(1em, $black, 400, 1.75)
