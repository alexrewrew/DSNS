/*fireman*/
@keyframes fireman-shadow {
  50% {
    transform: scale(1.31);
  }
}

@keyframes fire-man {
  50% {
    transform: translateY(-20px);
  }
}

.shadow-fireman {
  transform-origin: 70px 30px;
}

.shadow-fireman {
  animation: fireman-shadow 2.5s infinite;
}

.fire-man {
  animation: fire-man 2.5s infinite;
}

/*house*/
.house-fire {
  transform translateX(230px);
}

.car-fire {
  transform translateX(-480px);
}

.people1 {
  transform translateX(-700px);
}

.people2 {
  transform translateX(-600px);
}

.people3 {
  transform translateX(-300px);
}

.people4 {
  transform translateX(-150px);
}

@keyframes house-fire {
  40%, 100% {
    transform translateX(0);
  }
}

@keyframes car-fire {
  50% {
    transform translateX(-480px);
  }
  100% {
    transform translateX(0);
  }
}

@keyframes people {
  100% {
    transform translateX(0);
  }
}

@keyframes fire1 {
  0%, 100% {
    transform rotate(-0.3deg);
  }
  50% {
    transform rotate(0.3deg);
  }
}

@keyframes fire2 {
  0%, 100% {
    transform rotate(0.3deg);
  }
  50% {
    transform rotate(-0.3deg);
  }
}

.house-fire-animated {
  animation: house-fire 2s forwards;
}

.car-fire-animated {
  animation: car-fire 2s forwards;
}

.people1-animated, .people2-animated, .people3-animated, .people4-animated {
  animation: people 2s forwards;
}

.fire1 {
  transform-origin 500px 200px;
}

.fire2 {
  transform-origin 600px 150px;
}

.fire3 {
  transform translate(35px 35px);
  transform-origin 570px 180px;
}

.fire1, .fire3 {
  animation: fire1 0.5s infinite;
}

.fire2 {
  animation: fire2 0.5s infinite;
}

