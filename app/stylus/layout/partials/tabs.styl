.nav-tabs
  border 0
  margin 0 auto
  display: flex
  flex-direction: row
  flex-wrap: wrap
  justify-content space-around
  padding: 0 62px
  +portrait()
    padding 0
    justify-content space-between
  +mobile()
    padding 0
    justify-content space-between
    position relative
    top -55px
    &:before
      display none


.nav-tabs > li > a, .nav-tabs > li.active > a
  border 0
  border-radius 0
  margin 0
  &:hover
    border 0
  &:focus
    border 0

.nav-tabs > li > a
  background $white
  color $red-b
  text-align center
  margin-bottom 22px
  width 120px
  font-size 1.750em
  padding 4px 0
  +mobile()
    width 130px
  +portrait()
    width 100px
  &:hover
    background $red-b
    color $white
  &:focus
    background $red-b
    color $white

.nav-tabs > li.active > a
  background $red-b
  color $white
  &:focus
    background $red-b
    color $white

.tab-pane
  height 420px
  padding 90px 0
  margin-bottom 30px
  +mobile()
    padding 40px 0
    height 470px
  p
    color $white
    font-weight 300
    margin-top 0


.arrow-left
  position absolute
  left 15px
  top 200px
  z-index 20
  width: 40px;
  height: 22px;
  +mobile()
    top 380px
  &:before
    triangle($red-a, left, 12px)
    top 0
    left 0
    transitions()
  &:after
    triangle($red-a, left, 12px)
    top 0
    left 27px
    transitions()
  &:hover
    &:before
      transform translateX(-20px)
    &:after
      transform translateX(-10px)

.arrow-right
  position absolute
  right 15px
  top 200px
  z-index 20
  width: 40px;
  height: 22px;
  +mobile()
    top 380px
  &:before
    triangle($red-a, right, 12px)
    top 0
    right 0
    transitions()
  &:after
    triangle($red-a, right, 12px)
    top 0
    right 27px
    transitions()
  &:hover
    &:before
      transform translateX(20px)
    &:after
      transform translateX(10px)


