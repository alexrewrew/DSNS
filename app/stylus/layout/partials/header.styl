@import '../../utilities/vars'
@import '../../utilities/mixins'

/* HEADER */
header
  min-height 650px
  margin-bottom 188px
  position relative
  overflow hidden
  +portrait()
    min-height 357px
  +tablet()
    min-height 477px
  h1
    position absolute
    left: 0
    right 0
    bottom 22%
    z-index 4
    +portrait()
      bottom 10%
    +tablet()
      bottom 12%
    +mobile()
      bottom 12%
  .video-container
    position absolute
    top 0
    left 0
    right 0
    bottom 0
    width 100%
    height 100%
    .play-cover
      z-index 3
    .smoke
      position absolute
      bottom 0
      left 0
      right 0
      z-index 2
      width 100%
      height: 100%
      +mobile()
        display none
      .smoke-left
        width 100%
        position absolute
        left:0
        right 0
        z-index 3
      .smoke-right
        position absolute
        right 0
        left 0
        width 100%
        z-index 4
    +portrait()
      min-height 390px
    //+tablet()
    //  min-height 520px
  +mobile()
    min-height 550px
    padding-top 100%
    margin-bottom 69px

header .video-container .video .play-cover
  +mobile()
    height: 100%;
    width: auto;
    left: calc(50% - 542px)