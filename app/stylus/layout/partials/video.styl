.video-container
  position relative
  height 100%
  max-height 650px
  .video
    height 100%
    width 100%
    position relative
    iframe
      position absolute
      top 0
      left 0
      right 0
      bottom 0
      width 100%
      height 100%
      z-index 1
    .play-cover
      position absolute
      top 0
      left 0
      right 0
      bottom 0
      width 100%
      z-index 2
    svg
      width 96px
      position absolute
      top calc(50% - 48px)
      left calc(50% - 48px)
      z-index 3
      cursor pointer
      #Round
        transition .4s
        transform-origin 50%
      #Play, .st0
        transition .4s
      &:hover
        #Play
          .st0
            fill: $red-a
        #Round
          transform rotateZ(300deg)
          .st0
            fill: $red-a

.video-container.small
  margin-bottom 28px
  .video
    margin-bottom 77px
    height 200px
    overflow-Y hidden
    +portrait()
      height 117px
    +tablet()
      height 162px
  p
    margin-left 30px
    max-width 200px
    position relative
    &:before
      pseudo(block, absolute)
      top: -25px
      left 0
      width 30px
      height 4px
      background $red-a
