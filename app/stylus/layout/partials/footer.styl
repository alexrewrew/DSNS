@import "../../utilities/vars"
@import "../../utilities/mixins"

/* FOOTER */
footer
  background #292929
  color $white
  padding-top 33px
  padding-bottom 50px
  h2
    text-align center
    color $white
    font-size 1.750em
    margin-bottom 10px
  .sector
    float left
    position absolute
    top: -16px
    left: -85px
    +mobile()
      float none
      left auto
      right -15px
      transform rotate(180deg)
  p
    color $white
    line-height: 1.56
    font-size 1.125em
    +mobile()
      padding-right 25px
  a
    color $white
    &:hover
      color $red-a

.copyright
  line-height: 2.0
  margin 0
  font-size .875em
  +mobile()
    line-height: 4.0
  a
    &:hover
      color $red-a

.social-links
  display: flex
  flex-direction: row
  flex-wrap: wrap
  li
    list-style none
    a
      display inline-block
      transition none
      &:hover
        svg g g
          fill $red-a

.documents
  padding-top 18px
  +mobile()
    padding-top 50px
    padding-bottom 20px
  li
    list-style none
    a
      text-decoration underline
      line-height: 1.56
      font-size 1.125em
      transition none
      svg
        margin-right 18px
      &:hover
        svg g g
          fill $red-a