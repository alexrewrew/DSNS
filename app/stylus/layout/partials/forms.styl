@import '../../utilities/vars'
@import '../../utilities/mixins'

/* FORMS */
form
  display flex
  flex-direction: row
  flex-wrap: wrap
  justify-content space-between

/* INPUTS */
input
  background $white
  border none
  padding 17px 31px 24px
  margin-bottom 30px
  display inline-block
  width calc(50% - 15px)
  +mobile()
    width 100%
  &:focus
    outline 2px solid $red-a
  +placeholder()
    color #898989


textarea
  resize none
  width 100%
  height 150px
  padding 17px 31px 19px
  border none
  margin-bottom 56px
  &:focus
    outline 2px solid $red-a

label {}